{
	"name": "language-server-ruby",
	"version": "0.24.2",
	"description": "Language server for Ruby",
	"repository": "https://github.com/rubyide/vscode-ruby",
	"author": "Stafford Brunk <stafford.brunk@gmail.com>",
	"license": "MIT",
	"private": false,
	"main": "dist/index.js",
	"dependencies": {
		"diff-match-patch": "^1.0.4",
		"rxjs": "^6.4.0",
		"spawn-rx": "^3.0.0",
		"vscode-languageserver": "^5.2.1",
		"vscode-uri": "^1.0.6",
		"web-tree-sitter": "^0.15.8"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/diff-match-patch": "^1.0.32",
		"@types/mocha": "^5.2.7",
		"@typescript-eslint/eslint-plugin": "^1.13.0",
		"@typescript-eslint/parser": "^1.13.0",
		"chai": "^4.2.0",
		"eslint": ">=6.0.1",
		"eslint-config-prettier": "^6.0.0",
		"eslint-config-standard": "^13.0.1",
		"eslint-config-standard-with-typescript": "^8.0.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^9.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.0",
		"mocha": "^6.1.4",
		"nyc": "^14.1.1",
		"parcel-bundler": "^1.12.3",
		"prettier": "^1.18.2",
		"source-map-support": "^0.5.12",
		"tree-sitter-cli": "^0.15.6",
		"tree-sitter-ruby": "^0.15.1",
		"ts-node": "^8.0.3",
		"typescript": "^3.5.3"
	},
	"scripts": {
		"build": "parcel build -t node --bundle-node-modules src/index.ts",
		"build:wasm": "tree-sitter build-wasm ../../node_modules/tree-sitter-ruby && mv tree-sitter-ruby.wasm dist/",
		"clean": "mkdir -p dist && rm -rf dist/*",
		"lint": "eslint src/**/*.ts",
		"postbuild": "npm run build:wasm",
		"test": "nyc mocha -r ts-node/register -r source-map-support/register spec/**/*.ts",
		"watch": "tsc -w"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*_spec.ts",
			"out/**/*",
			"coverage/**/*"
		],
		"reporter": [
			"text",
			"lcov",
			"html"
		],
		"all": true
	}
}
